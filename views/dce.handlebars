<h2>Avis</h2>

<p>Liens BOAMP :</p>
<ul>
  {{#each place_metadata.links_boamp}}
    <li>
      <a href={{this}}>{{this}}</a>
    </li>
  {{/each}}
</ul>

{{#if avis}}
  {{#with avis}}
    <a href={{href}}>{{filename}} ({{file_size}})</a>
    <p>Glacier : {{glacier_id}}</p>
    <ul>
      {{#each embedded_filenames}}
        <li>
          {{this}}
        </li>
      {{/each}}
    </ul>
  {{/with}}
{{else}}
  <p>Cette annonce de comprend pas d'avis.</p>
{{/if}}


